<div>
    <main>
        {{> title data=name giant=true}}

        <hr>
        <hr>

        <section>
            {{> title data="Users" big=true}}
            <hr>
            <ul>
                {{#each users}}
                    <li>
                        <div class="row">
                            <div class="col-3">
                                {{> user main=true id=id name=name gender=gender age=age}}
                            </div>

                            <div class="col-4">
                                {{> title data="Friends" big=false}}
                                <ul class="mt-4">
                                    {{#each friends}}
                                        <li class="mb-4">
                                            {{> user id=id name=name gender=gender age=age}}
                                            
                                            <div>
                                                <div class="mt-3">
                                                    <strong>
                                                        <em>
                                                            Mutual friends
                                                        </em>
                                                    </strong>
                                                </div>                                                
                                                
                                                <ul class="mt-2">
                                                    {{#each mutual_friends}}
                                                        <li class="mb-2">
                                                            {{> user id=id name=name gender=gender age=age}}
                                                            {{#if mutual_friends}}
                                                                <div class="mt-2">
                                                                    <small>
                                                                        <div>
                                                                            <strong>
                                                                                <em>
                                                                                    Mutual friends
                                                                                </em>
                                                                            </strong>
                                                                        </div> 
                                                                        
                                                                        <ul class="mt-1">
                                                                            {{#each mutual_friends}}
                                                                                <li>
                                                                                    {{> user id=id name=name gender=gender age=age}}
                                                                                </li>
                                                                            {{/each}}
                                                                        </ul>
                                                                    </small>
                                                                </div>
                                                            {{/if}}
                                                            
                                                        </li>
                                                    {{/each}}
                                                </ul>
                                            </div>

                                            <div class="mt-3">
                                                {{> groups groups=groups internal=true}}
                                            </div>
                                            
                                        </li>
                                    {{/each}}
                                </ul>
                            </div>
                            
                            <div class="col-5">
                                {{> groups groups=groups internal=false}}                                
                            </div>
                            
                        </div>
                        <hr>
                    </li>                    
                {{/each}}
            </ul>
        </section>

    </main>
</div>