<main>

    {{> shopnav navigation=navigation}}

    <section>
        {{#with newsBlock}}
        <h5 class='text-center mt-5 mb-3'>{{title}}</h5>

        <div class='row px-2'>
            {{#each cards}}
                    <div class='card col-3 text-bg-dark gy-3'>
                        <div class='card-header'>
                            {{title}}
                            {{#if isNew}}
                                <span
                                class='badge bg-success rounded-pill'
                                >Нова</span>
                            {{/if}}
                            {{#if isTop}}
                                <span
                                class='badge bg-danger rounded-pill'
                                >Топ</span>
                            {{/if}}
                        </div>
                        <div class='card-body'>
                            {{description}}
                        </div>
                    </div>
            {{/each}}
        </div>

        {{/with}}
    </section>

     <hr class='my-5' />

    <section>
        {{#with goodsBlock}}
            <div class='nav nav-tabs mb-5'>
                {{#each tabs}}
                    {{#if isActive}}
                        <div class='nav-item'>
                            <a
                                href='#'
                                class='nav-link active'
                            >{{text}}</a>
                        </div>

                        {{else if isDisabled}}

                            <div class='nav-item'>
                                <a
                                    href='#'
                                    class='nav-link disabled'
                                >{{text}}</a>
                            </div>

                            {{else}}
                                <div class='nav-item'>
                                    <a
                                        href='#'
                                        class='nav-link'
                                    >{{text}}</a>
                                </div>                
                    {{/if}} 
                {{/each}}    
            </div>

            <div class='row gy-4 px-2'>
                {{#each cards}}
                <div class='card col-4'>
                    <img src={{image}} class='card-img-top' />
                    <div class='card-body'>
                    <h5 class='mb-2'>{{title}}
                        {{#if isHot}}
                        <span
                            class='badge bg-warning rounded-pill text-uppercase'
                        >Hot!</span>
                        {{/if}}
                        {{#if isNew}}
                        <span
                            class='badge bg-success rounded-pill'
                        >Нове</span>
                        {{/if}}
                    </h5>
                    <p>
                        {{description}}
                    </p>
                    </div>
                </div>
                {{/each}}
            </div>

        {{/with}}
    </section>

    <hr class='my-5' />

    <section>
        {{#with subscribe}}
        <div class='card text-bg-dark'>
            <div>
                <h2 class='m-3'>{{header}}</h2>
            </div>

            <p class='ms-3'>
                {{description}}
            </p>

            {{>buttons buttons=buttons}}
        </div>
        {{/with}}
    </section>

    <hr class='my-5' />

    <section>
        {{#with service}}
            <div class='card text-bg-success text-center'>
                <h2 class='my-3'>{{title}}</h2>

                <p>
                    {{description}}
                </p>

                {{>buttons buttons=buttons}}
            </div>
        {{/with}}
    </section>

  <hr class='mt-5 mb-3' />

  {{>shopfooter footer=footer}}

</main>