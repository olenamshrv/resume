<main>

    {{> shopNavigation navigation=navigation}}

    <section>                  
            {{#with formBlock}}
                <div class="row">
                    <div class="col-8">
                        <h1 class="mt-5 mb-4">{{header}}</h1>

                        <p class="mb-4">
                            {{#with rating}}
                                {{title}}: {{value}}
                            {{/with}}
                        </p>

                        {{#with actionBlock}}
                            <div class="nav nav-tabs">
                                {{#each tabs}}
                                    <div class="nav-item">
                                        {{#if isActive}}
                                            <a href="#" class="nav-link active">{{text}}</a>
                                            {{else}}
                                                <a href="#" class="nav-link">{{text}}</a>
                                        {{/if}}
                                    </div>
                                {{/each}}
                            </div>

                            <div class="my-5">
                                <hr>
                            </div>

                            <div class="card">
                                <div class="card-body">
                                    {{#with report}}
                                        <p>{{title}}</p>
                                        {{#with button}}
                                            <a href="{{link}}" class="btn btn-secondary">{{text}}</a>
                                        {{/with}}
                                    {{/with}}
                                </div>
                            </div>
                        {{/with}}                            

                        <div class="my-5">
                            <hr>
                        </div>

                        {{#with feedbackBlock}}
                            <h2 class="mb-5">{{title}}</h2>
                            
                            {{#each buttons}}                    
                                {{#if isWarning}}
                                    <a href="{{link}}" class="btn btn-warning text-light me-3">{{text}}</a>
                                {{/if}}
                                {{#if isSuccess}}
                                    <a href="{{link}}" class="btn btn-success me-3">{{text}}</a>
                                {{/if}}
                                {{#if isDanger}}
                                    <a href="{{link}}" class="btn btn-danger me-3">{{text}}</a>
                                {{/if}}
                            {{/each}}                    
                        {{/with}}                                        
                    </div>

                    <div class="col-4">
                        {{#with goodsInfo}}
                            <div class="card mt-5 mb-3">
                                <div class="card-body">
                                    <img src="{{photo}}" class="mb-3">
                                    <h6 class="mb-0">{{name}}</h6>
                                </div>
                            </div>
                            <div class="card mb-3">
                                <div class="card-body">
                                    <h5>{{price}}</h5>
                                    {{#if inMarket}}
                                        <p>
                                            Є в наявності                                        
                                        </p>
                                        {{>buttonsStartZero buttons=buttons}}
                                    {{/if}}
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-body">
                                    {{#with seller}}
                                        <span>{{title}}:</span>
                                        <b>{{value}}</b>
                                    {{/with}}
                                </div>
                            </div>
                        {{/with}}
                    </div>
                </div>
            {{/with}}            
    </section>

    <div class="my-5">
        <hr>
    </div>

    <section>
        {{#each reviewList}}
            {{>reviewItem this}}
        {{/each}}
    </section>

    {{>services service=service}}

</main>

<div class="mt-5 mb-2">
    <hr>
</div>

{{>shopfooter footer=footer}}